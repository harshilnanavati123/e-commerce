<%-include('../includes/head.ejs')%>
</head>
<body>
  <%-include('../includes/navigation.ejs')%>
    <main>
        <div><%=errorMessage%></div>
        <form action="/<% if(editing){%>edit-product<%}else{%>add-product<%}%>" method="post" enctype="multipart/form-data">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%if(editing||hasErrors){%><%=product.title%><%}%>">
            <label for="Image">Image</label>
            <input
             type="file"
              name="image" 
              >
              <label for="price">Price</label>
            <input type="number" name="price" value="<%if(editing||hasErrors){%><%=product.price%><%}%>">
            <label for="description">Description</label>
            <textarea rows="5" name="description" ><%if(editing||hasErrors){%><%=product.description%><%}%></textarea>
            <%if(editing){%>
                <input type="hidden" value="<%=product._id%>" name="productId">
<%}%><input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button type="submit"><% if(editing){%>Update Product<%}else{%>Add Product<%}%></button>
        </form>
    </main>
<%-include('../includes/end.ejs')%>